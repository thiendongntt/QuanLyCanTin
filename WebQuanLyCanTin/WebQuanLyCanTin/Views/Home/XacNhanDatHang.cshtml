   
@model IEnumerable<WebQuanLyCanTin.Models.GioHang>
@{
    ViewBag.Title = "XacNhanDatHang";
}
@if(@ViewBag.TongSanPham > 0) {

<div class="row dat-hang">

    <div class="col-md-7 chi-tiet-san-pham">
        <h2 class="font-weight-bold">CHI TIẾT SẢN PHẨM</h2>
        <div class="detailOrder">
            <div class="row mt-4">
                <div class="col-md-8">
                    <p class="font-weight-bold">Tổng sản phẩm</p>
                </div>
                <div class="col-md-4">
                    <p>@ViewBag.TongSanPham</p>
                </div>
            </div>
            @*@foreach (GioHang sanPham in (List<GioHang>)Session["GioHang"])*@
            @foreach(var sanPham in Model)
            {
                <div class="row">
                    <div class="col-md-8">
                        <p class="font-weight-bold">@sanPham.name</p>
                    </div>
                    <div class="col-md-4">
                        <p>@String.Format("{0:0,0}", sanPham.price) VNĐ</p>
                    </div>
                </div>
            }
            <div class="row">
                <div class="col-md-8">
                    <p class="font-weight-bold">Giao hàng:</p>
                </div>
                <div class="col-md-4">
                    <p class="text-muted">Giao hàng miễn phí</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-8">
                    <p class="font-weight-bold">Tổng thành tiền</p>
                </div>
                <div class="col-md-4">
                    <p> @ViewBag.TongTien VNĐ</p>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-5 chi-tiet-san-pham">
        <div class="tks" style="float: right; border: 1px solid red; padding: 0px 10px;">
            <h2 class="font-weight-bold">ĐƠN HÀNG ĐANG ĐƯỢC GIAO</h2>
            <ul>
                <li>Mã đơn hàng: <span class="font-weight-bold">@Session["MAHOADON"]</span></li>
                <li>Ngày đặt hàng: <span class="font-weight-bold">@Session["NGAYLAP"]</span></li>
                <li>Tổng cộng: <span class="font-weight-bold">@ViewBag.TongTien VNĐ</span></li>

            </ul>
        </div>
    </div>
</div>

}

else
{
      <h1> Bạn không thể xác nhận đặt hàng nếu chưa đặt hàng...</h1>
}

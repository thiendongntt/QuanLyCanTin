@model IEnumerable<WebQuanLyCanTin.Models.SANPHAM>
@{
    ViewBag.Title = "Index";
}

<div id="home-slider">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 header-top-right">
                <div class="homeslider">
                    <ul id="contenhomeslider">
                        <li><img alt="Funky roots" src="~/images/slide/img1.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/images/slide/img2.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/images/slide/img3.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/images/slide/img4.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/images/slide/img5.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/images/slide/img6.jpg" title="Funky roots" /></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-top">
    <div class="container">
        <div class="category-featured Vegetables">
            <nav class="navbar nav-menu show-brand" >
                <div class="container" >
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-brand" style="background-color: #779DCA;"><a href="#"> <img alt="Logo" src="~/images/icon_like.png" /> Sản phẩm</a></div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse">

                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->

            </nav>
            <div class="product-featured clearfix">
                <div class="row">

                    <div class="col-sm-12">
                        <div class="box-right">
                            <!--&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;-->
                            <ul class="product-list owl-carousel">
                                @foreach (var item in Model)
                                {

                                    <li class="col-sm-4 product-item">
                                        <div class="left-block">
                                            <a>
                                                <img class="img-responsive" alt="product"
                                                     src="@Url.Content(item.HINHANHSP)" style="width: 200px; height: 250px;" />
                                            </a>

                                            <div class="quick-view">
                                                <a title="Add to my wishlist" class="heart" href="#"></a>
                                                <a title="Add to compare" class="compare" href="#"></a>
                                                <a title="Quick view" href="@Url.Content(item.HINHANHSP)" class="search fancybox-button"></a>
                                            </div>
                                            <div class="add-to-cart">
                                                @if (item.SLCONLAI > 0)
                                                {
                                                    using (Html.BeginForm("ThemGioHang", "Home", new { maSP = item.IDSP }, FormMethod.Post))
                                                    {
                                                        <button type="submit" class="add-item-to-cart" title="Add to Cart" href="#" style="color: white;">
                                                            Thêm vào giỏ hàng
                                                        </button>
                                                    }

                                                }
                                            </div>
                                            <div class="bestseller"></div>
                                        </div>
                                        <div class="right-block">
                                            <h5 class="product-name"><a href="#"> @(WebQuanLyCanTin.Controllers.HomeController.getString(item.TENSP))</a></h5>

                                            <div class="content_price">
                                                <span class="price product-price"><span style="color: black">Giá:</span> @(string.Format("{0:#, ##0}",item.GIA)) VND</span>
                                            </div>
                                        </div>
                                    </li>
                                }

                            </ul>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
     .containner-the-end {
         margin: 50px 0px;
     }
    .the-end-container {
        width: 1165px;
        display: flex;
        justify-content: space-evenly;
        margin: 0px auto;
    }
    .the-end-first {
        background-color: #ccc;
        height: 300px;
    }
    .the-end-two {
        background-color: #ccc;
        height: 300px;
    }
    .the-end-three {
        background-color: #ccc;
        height: 300px;
    }

    .the-end img {
        width: 100%;
        height: 100%;
    }
    .the-end img:hover {
            background-color: red;
            transform: scale(1,1);
            transition: all 0.3s ease-in-out;
            box-shadow: 4px 4px 4px green;
            opacity: 0.8;
            /* display: none;*/
    }
    .the-end-container a {
        position: relative;
        display: block;
    }
    .the-end-container a .name {
        opacity: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        text-transform: uppercase;
        position: absolute;
        color: #333;
        font-weight: 700;
        letter-spacing: 2px;
        left: 50%;
        bottom: 0px;
        transform: translateX(-50%);
        transition: all 0.3s ease-in-out;
     
        
    }
        .the-end-container a:hover .name {
            bottom: 150px;
            opacity: 1;
            font-size: 20px;
            font-weight: 900;
        }

</style>
